{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "API",
			"cwd": "${workspaceFolder}/backend",
			"runtimeExecutable": "yarn",
			"runtimeArgs": ["dev"],
			"skipFiles": ["backend/<node_internals>/**"],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "App",
			"cwd": "${workspaceFolder}/frontend",
			"runtimeExecutable": "yarn",
			"runtimeArgs": ["dev"],
			"skipFiles": ["frontend/<node_internals>/**"],
			"console": "integratedTerminal"
		}
	]
